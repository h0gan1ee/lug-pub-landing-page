style.
    html {
        font-smooth: subpixel-antialiased;
    }

    .link-box span {
        margin: 0 1.5rem;
    }

    h1,
    h2,
    h3 {
        width: fit-content;
        text-align: center;
    }

    a.logo-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: auto;
        max-width: 16em;
    }

    footer {
        margin-top: 8em;
        text-align: center;
        font-size: 0.76em;
        color: #aaa;
        margin-bottom: 0;
    }


    footer a {
        will-change: transform;
        transition: all .3s ease-in-out;
        color: inherit;
        text-decoration: none;
    }

    footer a:hover {
        color: #7171f4;
    }

    footer span {
        margin: 0 .8rem;
    }

    a.link {
        text-decoration: none;
        margin-left: 0.6em;
        margin-right: 0.6em;
        margin-bottom: 1.2em;
    }

    .heading {
        will-change: transform;
        transition: all .3s ease-in-out;
        margin: 1.2em auto 3em auto;
        white-space: nowrap;
        font-size: 1.8em;
        color: #7171f4;
        filter: drop-shadow(0px 18px 9px rgba(0, 0, 0, 0.07));
    }

    .heading:hover {
        color: #f15498;
        transform: translateY(3px);
        filter: drop-shadow(0px 12px 6px rgba(0, 0, 0, 0.07));
    }

    .section-heading {
        margin: 2em auto 1.6em auto;
        color: #7171f4;
        font-size: 1.2em;
        font-weight: normal;
        filter: drop-shadow(0px 0px 4px rgba(255, 255, 255, 1));
    }

    div.container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        font-size: 1em;
    }

    img#logo {
        will-change: transform;
        transition: all .3s ease-in-out;
        height: 224px;
        display: block;
        filter: drop-shadow(0px 18px 9px rgba(0, 0, 0, 0.07));
    }

    img#logo:hover {
        transform: rotate(8deg);
        filter: drop-shadow(0px 12px 6px rgba(0, 0, 0, 0.07));
    }

    div.link-box {
        will-change: transform;
        transition: all .3s ease-in-out;
        white-space: nowrap;
        color: #680b4c;
        background-color: #ffffff;
        border-radius: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        height: 50px;
        width: auto;
        box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 6px -1px, rgba(0, 0, 0, 0.06) 0px 2px 4px -1px;
    }

    div.link-box:hover {
        transform: translateY(-3px) scale(1.01);
        color: #da46ad;
        box-shadow: rgba(0, 0, 0, 0.12) 0px 6px 8px -1px, rgba(0, 0, 0, 0.08) 0px 4px 6px -1px;
    }

    hr.divider-dotted {
        will-change: transform;
        transition: border-top .3s;
        border-top: 2px dotted #e7e7e7;
        border-left: none;
        border-right: none;
        border-bottom: none;
        width: 80%;
        margin-top: 2.8em;
        margin-bottom: 3.8em;
    }

    hr.divider-dotted:hover {
        border-top: 2px dotted #e7e0b7;
    }

    div.body-wrapper {
        position: relative;
    }

    div.content {
        max-width: 700px;
        height: 100%;
        margin: auto;
        padding: 3em 14px;
        position: relative;
        z-index: 0;
    }

    div#background {
        position: absolute;
        height: 100%;
        width: 100%;
        top: 0;
        left: 0;
        z-index: -100;
    }
